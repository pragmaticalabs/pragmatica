<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.pragmatica-lite</groupId>
    <artifactId>pragmatica</artifactId>
    <version>0.15.0</version>
    <packaging>pom</packaging>

    <name>Pragmatica</name>
    <description>Pragmatica ecosystem: functional core library, JBCT tooling, and Aether distributed runtime</description>
    <url>https://github.com/pragmaticalabs/pragmatica</url>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
            <comments>Core modules (core, integrations, jbct)</comments>
        </license>
        <license>
            <name>Business Source License 1.1</name>
            <url>https://mariadb.com/bsl11/</url>
            <comments>Aether modules - converts to Apache License 2.0 on January 1, 2030</comments>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/pragmaticalabs/pragmatica.git</url>
        <connection>scm:git:ssh://git@github.com/pragmaticalabs/pragmatica.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/pragmaticalabs/pragmatica.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <developers>
        <developer>
            <name>Sergiy Yevtushenko</name>
            <email>sergiy.yevtushenko@gmail.com</email>
            <organization>Pragmatica Labs</organization>
            <organizationUrl>https://www.pragmatica-lite.org</organizationUrl>
        </developer>
    </developers>

    <modules>
        <module>core</module>
        <module>integrations</module>
        <module>testing</module>
        <module>jbct</module>
        <module>aether</module>
        <module>examples</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.release>25</java.release>

        <!-- Dependencies -->
        <netty.version>4.2.9.Final</netty.version>
        <slf4j.version>2.0.17</slf4j.version>
        <junit.version>5.13.4</junit.version>
        <assertj-core.version>3.27.7</assertj-core.version>
        <mockito.version>5.21.0</mockito.version>
        <awaitility.version>4.3.0</awaitility.version>
        <tinylog.version>2.7.0</tinylog.version>
        <kryo.version>5.6.2</kryo.version>
        <fury-core.version>0.10.3</fury-core.version>
        <picocli.version>4.7.6</picocli.version>
        <asm.version>9.8</asm.version>
        <micrometer.version>1.16.1</micrometer.version>
        <onnxruntime.version>1.23.2</onnxruntime.version>

        <!-- Integration Dependencies -->
        <jackson.version>3.0.3</jackson.version>
        <jakarta.persistence.version>3.2.0</jakarta.persistence.version>
        <jooq.version>3.20.10</jooq.version>

        <!-- Maven Plugin versions -->
        <maven-compiler-plugin.version>3.14.0</maven-compiler-plugin.version>
        <maven-surefire-plugin.version>3.5.2</maven-surefire-plugin.version>
        <maven-failsafe-plugin.version>3.5.1</maven-failsafe-plugin.version>
        <maven-plugin-api.version>3.9.9</maven-plugin-api.version>
        <maven-plugin-annotations.version>3.15.1</maven-plugin-annotations.version>
        <maven-plugin-plugin.version>4.0.0-beta-2</maven-plugin-plugin.version>

        <!-- Skip jbct by default to avoid cycle during reactor build -->
        <jbct.skip>true</jbct.skip>
    </properties>

    <dependencyManagement>
